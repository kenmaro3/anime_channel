


<div class="row">
  <aside class="col-lg-2 col-lg-offset-1 col-md-2 col-md-offset-1 col-sm-3 col-sm-offset-4 col-xs-3 col-xs-offset-4">
    <div class="user-profile">
      <div class="icon text-center">
        <img src="<%= gravatar_url(@user, size: 100) %>" alt="" class="img-circle">
      </div>
      <div class="name text-center">
        <h1><%= @user.name %></h1>
      </div>
    </div>
  </aside>
  <div class="col-lg-8 col-lg-offset-1 col-md-8 col-md-offset-1 col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1">
    <ul class="nav nav-tabs nav-justified">
      <li class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>Posts <span class="badge"><%= @count_posts %></span><% end %></li>
      <li class="<%= 'active' if current_page?(likes_user_path(@user)) %>"><%= link_to likes_user_path(@user) do %>Likes <span class="badge"><%= @count_likes %></span><% end %></li>
      
    </ul>
    <%= render 'posts/posts', posts: @posts %>
  </div>
</div>
