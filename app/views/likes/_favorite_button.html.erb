<% unless current_user.id == post.user_id %>
  <% if current_user.favorite?(post) %>
    <%= form_for(current_user.likes.find_by(post_id: post.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :post_id, post.id %>
      <%= f.submit 'Unfavorite', class: 'btn btn-danger btn-xs' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.likes.build) do |f| %>
      <%= hidden_field_tag :post_id, post.id %>
      <%= f.submit 'Favorite', class: 'btn btn-primary btn-xs'  %>
    <% end %>
  <% end %>
<% end %>