<% if items %>
  <div class="row">
    <% items.each do |item| %>
      <div class="item">
        <div class="col-md-3 col-sm-4 col-xs-12">
          <div class="panel panel-default">
            <div class="panel-heading text-center">
              <img src="<%= item.image_url %>" alt="" >
            </div>
            <div class="panel-body">
                          
              
              <%= form_tag(new_post_path, method: :get, class: "form-inline") do %>
                <%= hidden_field_tag(:url, item.url) %>
                <%= hidden_field_tag(:image_url, item.image_url) %>
                <%= submit_tag("この画像を選ぶ", class: 'btn btn-success btn-lg') %>
              <% end %>
              
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>